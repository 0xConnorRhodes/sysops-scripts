#!/usr/bin/env bash
# run on phone with curl -sSL sfs.connorrhodes.com/bootstrap/termux.sh | bash

# ncurses prompt for mirrors to use
termux-change-repo

pkg update
yes | pkg upgrade

pkg add -y \
	openssh \
	chezmoi \
	termux-api \
	python \
	ruby \
        nnn \
        aria2 \
        curl \
        fd \
        fzf \
        mosh \
        rsync \
        ripgrep \
        unzip \
        vim \
        zoxide

python -m pip install \
	ipython

#gem install \
#	pry

echo 'Next, Set Password For SSH with `passwd`'

#!/usr/bin/env bash
# run on phone with curl -sSL sfs.connorrhodes.com/bootstrap/termux.sh | bash

# ncurses prompt for mirrors to use
# choose Rotate then North America
termux-change-repo

pkg update
yes | pkg upgrade

pkg add -y \
	chezmoi \
	git \
	termux-api \
        nnn \
        aria2 \
        curl \
        fd \
        fzf \
        mosh \
        rsync \
        ripgrep \
        vim

#python -m pip install \
#	ipython

#gem install \
#	pry

termux-setup-storage
ln -s $HOME/storage/dcim/notes $HOME/notes

chezmoi init --apply https://github.com/0xConnorRhodes/termux-dotfiles.git


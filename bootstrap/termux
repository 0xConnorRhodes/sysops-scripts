#!/usr/bin/env bash
# run on phone with curl -sSL sfs.connorrhodes.com/bootstrap/termux.sh | bash

echo 'first run termux-change-repo (default options are sufficient)'
sleep 5

yes | pkg upgrade

pkg add -y \
	openssh \
	chezmoi \
	fish \
	termux-api \
	croc \
	python \
	ruby

python -m pip install \
	ipython

gem install \
	pry

echo 'for ssh set password with password, then run sshd'

#!/usr/bin/env ruby

files = Dir.glob("*.{mp4,m4b}")

if files.empty?
  abort "Error: no .mp4 or .m4b files found in #{Dir.pwd}"
end

if Dir.exist?("output")
  abort "Error: 'output' directory already exists in #{Dir.pwd}"
end

Dir.mkdir("output")

puts "Found media files:"
files.each { |f| puts "  - #{f}" }

print "Proceed? (y or Enter to proceed, n or c to cancel): "
answer = STDIN.gets.chomp.downcase

unless answer.empty? || answer == "y"
  puts "Cancelled."
  exit 1
end

files.each do |file|
  command = "ffmpeg -i \"#{file}\" -vcodec copy -filter:a \"volume=0.4\" output/\"#{file}\""
  # puts command
  system(command) or abort "ffmpeg failed on #{file}"
end
